[colors]
background = #2D383A
foreground = #C7C7C7
primary = #04DC6E
secondary = #06BCC6
third = #B203DD
fourth = #F38502
fith = #FF531F
sixth = #FF2E1F

;-----------------------------------

[bar/bottom]
width = 100%
height = 26
radius = 0

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Hack Nerd Font:style=Bold:size=12;2
font-1 = Hack Nerd Font:style=Bold:size=18;3

tray-position = right
tray-maxsize = 16
tray-background = ${colors.sixth}
tray-padding = 0

bottom = true
modules-right = R4 battery R3 pulseaudio R2 network R1 date
modules-left = ewmh L2 xkeyboard L1

;-----------------------------------

[module/ewmh]
type = internal/xworkspaces
format-background = ${colors.third}
format-foreground = ${colors.foreground}

pin-workspaces = true
enable-click = true
icon-0 = Terminal;
icon-1 = Web;爵
icon-2 = Code;
icon-3 = Reference;
icon-default = 

format = <label-state>

label-active = %name% %icon%
label-active-foreground = ${colors.background}
label-active-background = ${colors.primary}
label-active-underline = ${colors.fourth}
label-active-padding = 2

label-occupied = %icon%
label-occupied-underline = ${colors.fourth}

label-urgent = %icon%
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.sixth}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-background = ${colors.third}
label-empty-padding = 1
;-----------------------------------

[module/xkeyboard]
type = internal/xkeyboard
format-background = ${colors.secondary}
format-foreground = ${colors.foreground}
format-padding = 1

format = <label-indicator>

lable-indicator-on = %name% %icon%
label-indicator-off = 

lable-layout = %indicator%
label-layout-foreground = ${colors.foreground}
label-layout-background = ${colors.secondary}

label-indicator-on-capslock = %name% בּ 
label-indicator-on-numlock = %name% 
label-indicator-on-scrolllock = %name% 


;-----------------------------------

[module/title]
type = internal/xwindow

format-background = ${colors.primary}

;-----------------------------------

[module/date]
type = internal/date
interval = 5
format-background = ${colors.sixth}

date = "%Y-%m-%d"

time = %H:%M

label = "  %date%  %time% "

;-----------------------------------

[module/battery]
type = internal/battery
format-background = ${colors.primary}
format-foreground = ${colors.background}
format-padding = 0

full-at = 99

battery = BAT0
adapter = AC

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-charging-background = ${colors.primary}
format-charging-foreground = ${colors.background}
format-discharging-background = ${colors.primary}
format-discharging-foreground = ${colors.background}
format-charging-padding = 0
format-discharging-padding = 0

label-charging = %percentage%%
label-discharging = %percentage%%
label-full =  %percentage%%
label-full-background = ${colors.primary}
label-full-foreground = ${colors.background}
label-full-padding = 1

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 500

;-----------------------------------

[module/network]
type= internal/network
interface= wlp4s0
format-background = ${colors.fith}
format-padding = 0

format-connected = <label-connected> <ramp-signal>
format-disconnected = <label-disconnected>
format-connected-background = ${colors.fith}
format-disconnected-background = ${colors.fith}
format-connected-padding = 0
format-disconnected-padding = 0

label-connected = %essid%
label-disconnected =  not connected :(

ramp-signal-0 = 直 ▁
ramp-signal-1 = 直 ▂
ramp-signal-2 = 直 ▄
ramp-signal-3 = 直 ▆
ramp-signal-4 = 直 █

;-----------------------------------

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
interval = 2
format-background = ${colors.fourth}


format-volume = <ramp-volume><label-volume>
format-volume-background = ${colors.fourth}
format-muted = <label-muted>

label-volume-background = ${colors.fourth}
label-muted-background = ${colors.fourth}
label-muted = 婢 muted
label-muted-padding = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-background = ${colors.fourth}
click-right = pavucontrol

;--------Break colours-------------

[module/R1]
type = custom/text
content = 

content-foreground = ${colors.sixth}
content-background = ${colors.fith}
content-font = 2
content-padding = 1
;-----------------------------------

[module/R2]
type = custom/text
content = 

content-foreground = ${colors.fith}
content-background = ${colors.fourth}
content-font = 2
content-padding = 1

;-----------------------------------

[module/R3]
type = custom/text
content = 

content-foreground = ${colors.fourth}
content-background = ${colors.primary}
content-font = 2
content-padding = 1

;-----------------------------------

[module/R4]
type = custom/text
content = 

content-foreground = ${colors.primary}
content-background = ${colors.background}
content-font = 2
content-padding = 1

;-----------------------------------

[module/L1]
type = custom/text
content = 

content-background = ${colors.secondary}
content-foreground = ${colors.background}
content-font = 2
content-padding = 1

;-----------------------------------

[module/L2]
type = custom/text
content = 

content-background = ${colors.third}
content-foreground = ${colors.secondary}
content-font = 2
content-padding = 1
